<Window x:Class="PadForge.Views.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Save As Profile"
        Height="380" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Profile Name:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="NameBox" Text="New Profile" Margin="0,0,0,12"/>

        <TextBlock Grid.Row="2" Text="Executables (matched against foreground window):"
                   Margin="0,0,0,4"/>
        <ListBox Grid.Row="3" x:Name="ExeListBox" Margin="0,0,0,8"
                 MinHeight="80">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,12">
            <Button Content="Browse..." Click="BrowseButton_Click"
                    MinWidth="80" Margin="0,0,8,0"/>
            <Button Content="Remove" Click="RemoveButton_Click"
                    MinWidth="80"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" MinWidth="80" Margin="0,0,8,0"
                    IsDefault="True" Click="SaveButton_Click"
                    Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Cancel" MinWidth="80"
                    IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
